<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        android:contentDescription="@string/map"
        app:layout_constraintBottom_toTopOf="@+id/btn_lyon_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rec_center_header"
        app:srcCompat="@drawable/map" />

    <Button
        android:id="@+id/btn_my_reservations"
        android:layout_width="171dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/btn_login"
        android:gravity="center"
        android:padding="6dp"
        android:text="@string/reservations"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/rec_center_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_my_profile"
        android:layout_width="171dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/btn_login"
        android:gravity="center"
        android:padding="6dp"
        android:text="@string/profile"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/rec_center_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_lyon_center"
        android:layout_width="318dp"
        android:layout_height="65dp"
        android:backgroundTint="#343A40"
        android:text="@string/lyon_center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btn_village_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btn_village_center"
        android:layout_width="318dp"
        android:layout_height="65dp"
        android:backgroundTint="#343A40"
        android:text="@string/usc_village_rec_center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btn_aquatics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_lyon_center" />

    <Button
        android:id="@+id/btn_aquatics"
        android:layout_width="318dp"
        android:layout_height="65dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#343A40"
        android:text="@string/uytengsu_aquatics_center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_village_center" />

    <TextView
        android:id="@+id/rec_center_header"
        android:layout_width="346dp"
        android:layout_height="51dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="61dp"
        android:text="@string/select_a_rec_center"
        android:textAlignment="center"
        android:textColor="@color/gray_trojan"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_my_reservations" />

</androidx.constraintlayout.widget.ConstraintLayout>